.container {
  height: 100%;
  background-color: #fff; }

.module-title {
  height: 100rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff; }

.search .search-control {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  background-color: #fff; }
  .search .search-control input {
    flex: 1;
    height: 60rpx;
    padding: 0 10rpx;
    line-height: 60rpx;
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    border-left: 1rpx solid #ddd; }
  .search .search-control button {
    width: 100rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    background-color: #ff397e;
    border: 1rpx solid #ff397e; }
    .search .search-control button.cancel {
      background-color: #ddd;
      border: 1rpx solid #ddd; }

.search .search-result-singer {
  padding: 0 20rpx;
  margin-top: 20rpx;
  background-color: #fff; }
  .search .search-result-singer .list {
    display: flex;
    align-items: center;
    flex-wrap: wrap; }
    .search .search-result-singer .list view {
      margin-top: 20rpx;
      margin-right: 20rpx;
      line-height: 50rpx;
      border-bottom: 1rpx solid #ddd; }

.search .search-result-song {
  padding: 0 20rpx;
  margin-top: 20rpx;
  background-color: #fff; }
  .search .search-result-song .list view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 20rpx;
    line-height: 50rpx;
    border-bottom: 1rpx solid #ddd; }
  .search .search-result-song .more {
    padding: 20px;
    color: #ff397e;
    text-align: center; }

.slide {
  height: 400rpx;
  margin-top: 20rpx;
  background-color: #fff; }
  .slide .slide-image {
    width: 100%;
    height: 100%; }

.singer {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #fff; }
  .singer .singer-item {
    display: flex;
    align-items: center;
    flex: 1;
    flex-direction: column;
    justify-content: center;
    margin-top: 10rpx; }
  .singer .singer-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%; }
  .singer .singer-name {
    margin: 10rpx 0; }

.song {
  padding: 20rpx;
  background-color: #fff; }
  .song .song-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 32rpx;
    line-height: 70rpx;
    border-bottom: 1rpx solid #ddd; }
