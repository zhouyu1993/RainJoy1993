.container {
  height: 100%;
  background-color: #fff; }

.topList {
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff; }
  .topList .topList-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx; }
    .topList .topList-item .topList-item-image {
      width: 200rpx;
      height: 200rpx; }
    .topList .topList-item .topList-item-rt {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: 500rpx;
      height: 180rpx;
      font-size: 32rpx; }
      .topList .topList-item .topList-item-rt .topList-item-songList {
        color: #666; }
        .topList .topList-item .topList-item-rt .topList-item-songList view {
          overflow: hidden;
          font-size: 26rpx;
          text-overflow: ellipsis;
          height: 40rpx;
          line-height: 40rpx;
          white-space: nowrap; }

.module-title {
  height: 100rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #fff; }

.search {
  padding: 0 20rpx;
  background-color: #fff; }
  .search .search-control {
    display: flex;
    align-items: center;
    justify-content: space-between; }
    .search .search-control input {
      flex: 1;
      height: 60rpx;
      padding: 0 10rpx;
      line-height: 60rpx;
      border-top: 1rpx solid #ddd;
      border-bottom: 1rpx solid #ddd;
      border-left: 1rpx solid #ddd; }
    .search .search-control button {
      width: 100rpx;
      height: 60rpx;
      line-height: 60rpx;
      color: #fff;
      background-color: #ff397e;
      border: 1rpx solid #ff397e; }
      .search .search-control button.cancel {
        background-color: #ddd;
        border: 1rpx solid #ddd; }
  .search .search-hotkeys {
    padding: 20rpx;
    background-color: #fff; }
    .search .search-hotkeys .hotkey {
      display: inline-block;
      padding: 20rpx;
      margin-right: 20rpx;
      margin-bottom: 20rpx;
      font-size: 24rpx;
      border: 1px solid #bbb;
      border-radius: 20rpx; }
      .search .search-hotkeys .hotkey.first-child {
        color: #ff397e;
        border: 1px solid #ff397e; }
  .search .search-result {
    padding: 20rpx;
    background-color: #fff; }
    .search .search-result-song .list view {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 20rpx;
      line-height: 50rpx;
      border-bottom: 1rpx solid #ddd; }
    .search .search-result .more {
      padding: 20px;
      color: #ff397e;
      text-align: center; }
